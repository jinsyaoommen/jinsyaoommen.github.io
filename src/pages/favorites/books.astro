---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Books | Jinsy Oommen">
  <section class="page">
    <div class="container">
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">/</span>
        <a href="/favorites">Favorites</a>
        <span class="separator">/</span>
        <span class="current">Books</span>
      </nav>

      <h1>Books</h1>
      <p class="intro">Books that have influenced me.</p>

      <ul class="list">
        <li>The Five Dysfunctions of a Team â€” Patrick Lencioni</li>
      </ul>
    </div>
  </section>
</Layout>

<style>
  .page {
    padding: 4rem 0;
    min-height: calc(100vh - 64px);
  }

  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumbs a {
    color: #7c9eb2;
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    text-decoration: underline;
  }

  .breadcrumbs .separator {
    color: #ccc;
  }

  .breadcrumbs .current {
    color: #888;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2d2d2d;
  }

  .intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .list {
    padding-left: 1.5rem;
  }

  .list li {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #444;
    margin-bottom: 0.75rem;
  }
</style>
