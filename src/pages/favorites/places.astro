---
import Layout from '../../layouts/Layout.astro';

const places = [
  { name: 'Machu Picchu', location: 'Peru', image: '' },
  { name: 'Kerala', location: 'India', image: '' },
  { name: 'Bangalore', location: 'India', image: '' },
  { name: 'Changi Airport', location: 'Singapore', image: '' },
  { name: 'Yellowstone National Park', location: 'USA', image: '' },
  { name: 'Crater Lake National Park', location: 'USA', image: '' },
  { name: 'Redwood National Park', location: 'USA', image: '' },
  { name: 'Mt Hood', location: 'Oregon, USA', image: '' },
];
---

<Layout title="Places | Jinsy Oommen">
  <section class="page">
    <div class="container">
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">/</span>
        <a href="/favorites">Favorites</a>
        <span class="separator">/</span>
        <span class="current">Places</span>
      </nav>

      <h1>Places</h1>
      <p class="intro">Places that have left a mark.</p>

      <div class="grid">
        {places.map((place) => (
          <div class="card">
            <div class="image-container">
              {place.image ? (
                <img src={place.image} alt={place.name} />
              ) : (
                <div class="placeholder">
                  <span>+</span>
                </div>
              )}
            </div>
            <div class="overlay">
              <div class="info">
                <h2>{place.name}</h2>
                <span class="location">{place.location}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .page {
    padding: 4rem 0;
    min-height: calc(100vh - 64px);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumbs a {
    color: #7c9eb2;
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    text-decoration: underline;
  }

  .breadcrumbs .separator {
    color: #ccc;
  }

  .breadcrumbs .current {
    color: #888;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2d2d2d;
  }

  .intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .card {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  .card:hover .overlay {
    opacity: 1;
  }

  .image-container {
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card:hover .image-container img {
    transform: scale(1.05);
  }

  .placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e5e5e5 0%, #d0d0d0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder span {
    font-size: 2rem;
    color: #bbb;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
    padding: 2rem 1rem 1rem;
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  .info h2 {
    font-size: 0.95rem;
    font-weight: 500;
    color: white;
    margin: 0 0 0.25rem 0;
  }

  .location {
    font-size: 0.8rem;
    color: rgba(255,255,255,0.8);
  }

  @media (max-width: 900px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 600px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 400px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
