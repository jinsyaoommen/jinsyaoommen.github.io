---
import Layout from '../../layouts/Layout.astro';

const places = [
  {
    name: 'Machu Picchu',
    location: 'Peru',
    image: '',
    description: '',
    gallery: []
  },
  {
    name: 'Kerala',
    location: 'India',
    image: '/places/kerala.jpg',
    description: '',
    gallery: []
  },
  {
    name: 'Bangalore',
    location: 'India',
    image: '',
    description: '',
    gallery: []
  },
  {
    name: '',
    location: 'Singapore',
    image: '/places/Singapore.jpg',
    description: '',
    gallery: []
  },
  {
    name: 'Yellowstone National Park',
    location: 'USA',
    image: '',
    description: '',
    gallery: []
  },
  {
    name: 'Crater Lake National Park',
    location: 'USA',
    image: '',
    description: '',
    gallery: []
  },
  {
    name: 'Redwood National Park',
    location: 'USA',
    image: '',
    description: '',
    gallery: []
  },
  {
    name: 'Mt Hood',
    location: 'Oregon, USA',
    image: '',
    description: '',
    gallery: []
  },
];
---

<Layout title="Places | Jinsy Oommen">
  <section class="page">
    <div class="container">
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="separator">/</span>
        <a href="/favorites">Favorites</a>
        <span class="separator">/</span>
        <span class="current">Places</span>
      </nav>

      <h1>Places</h1>
      <p class="intro">Places that have left a mark.</p>

      <div class="under-construction">
        Under construction
      </div>

      <div class="grid">
        {places.map((place, index) => (
          <div class="card" data-index={index}>
            <div class="image-container">
              {place.image ? (
                <img src={place.image} alt={place.name} />
              ) : (
                <div class="placeholder">
                  <span>+</span>
                </div>
              )}
            </div>
            <div class="overlay">
              <div class="info">
                <h2>{place.name}</h2>
                <span class="location">{place.location}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Modal -->
  <div class="modal" id="placeModal">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <div class="modal-nav">
        <button class="nav-prev" aria-label="Previous">&laquo;</button>
        <button class="nav-next" aria-label="Next">&raquo;</button>
      </div>
      <button class="modal-close" aria-label="Close">&times;</button>
      <div class="modal-body">
        <div class="modal-gallery">
          <div class="modal-image-container">
            <div class="modal-placeholder">
              <span>+</span>
            </div>
          </div>
          <div class="gallery-thumbnails"></div>
        </div>
        <div class="modal-info">
          <h2 class="modal-title"></h2>
          <span class="modal-location"></span>
          <p class="modal-description"></p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ places }}>
  const modal = document.getElementById('placeModal');
  const backdrop = modal.querySelector('.modal-backdrop');
  const closeBtn = modal.querySelector('.modal-close');
  const prevBtn = modal.querySelector('.nav-prev');
  const nextBtn = modal.querySelector('.nav-next');
  const cards = document.querySelectorAll('.card');

  let currentIndex = 0;

  function openModal(index) {
    currentIndex = index;
    updateModal();
    modal.classList.add('open');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal.classList.remove('open');
    document.body.style.overflow = '';
  }

  function updateModal() {
    const place = places[currentIndex];
    modal.querySelector('.modal-title').textContent = place.name;
    modal.querySelector('.modal-location').textContent = place.location;
    modal.querySelector('.modal-description').textContent = place.description || 'More details coming soon...';

    const imageContainer = modal.querySelector('.modal-image-container');
    if (place.image || (place.gallery && place.gallery.length > 0)) {
      const imgSrc = place.image || place.gallery[0];
      imageContainer.innerHTML = `<img src="${imgSrc}" alt="${place.name}" />`;
    } else {
      imageContainer.innerHTML = `<div class="modal-placeholder"><span>+</span></div>`;
    }

    // Update gallery thumbnails
    const thumbnailsContainer = modal.querySelector('.gallery-thumbnails');
    if (place.gallery && place.gallery.length > 1) {
      thumbnailsContainer.innerHTML = place.gallery.map((img, i) =>
        `<div class="thumbnail ${i === 0 ? 'active' : ''}" data-img="${img}">
          <img src="${img}" alt="${place.name}" />
        </div>`
      ).join('');
      thumbnailsContainer.style.display = 'flex';
    } else {
      thumbnailsContainer.innerHTML = '';
      thumbnailsContainer.style.display = 'none';
    }

    // Update nav buttons
    prevBtn.style.visibility = currentIndex > 0 ? 'visible' : 'hidden';
    nextBtn.style.visibility = currentIndex < places.length - 1 ? 'visible' : 'hidden';
  }

  function goToPrev() {
    if (currentIndex > 0) {
      currentIndex--;
      updateModal();
    }
  }

  function goToNext() {
    if (currentIndex < places.length - 1) {
      currentIndex++;
      updateModal();
    }
  }

  // Event listeners
  cards.forEach((card, index) => {
    card.addEventListener('click', () => openModal(index));
    card.style.cursor = 'pointer';
  });

  closeBtn.addEventListener('click', closeModal);
  backdrop.addEventListener('click', closeModal);
  prevBtn.addEventListener('click', goToPrev);
  nextBtn.addEventListener('click', goToNext);

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (!modal.classList.contains('open')) return;
    if (e.key === 'Escape') closeModal();
    if (e.key === 'ArrowLeft') goToPrev();
    if (e.key === 'ArrowRight') goToNext();
  });

  // Thumbnail click
  modal.addEventListener('click', (e) => {
    const thumbnail = e.target.closest('.thumbnail');
    if (thumbnail) {
      const img = thumbnail.dataset.img;
      modal.querySelector('.modal-image-container').innerHTML = `<img src="${img}" alt="" />`;
      modal.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
      thumbnail.classList.add('active');
    }
  });
</script>

<style>
  .page {
    padding: 4rem 0;
    min-height: calc(100vh - 64px);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumbs a {
    color: #7c9eb2;
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    text-decoration: underline;
  }

  .breadcrumbs .separator {
    color: #ccc;
  }

  .breadcrumbs .current {
    color: #888;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2d2d2d;
  }

  .intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .under-construction {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #fff3cd;
    color: #856404;
    border-radius: 4px;
    font-size: 0.85rem;
    margin-bottom: 2rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .card {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  .card:hover .overlay {
    opacity: 1;
  }

  .image-container {
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card:hover .image-container img {
    transform: scale(1.05);
  }

  .placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e5e5e5 0%, #d0d0d0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder span {
    font-size: 2rem;
    color: #bbb;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
    padding: 2rem 1rem 1rem;
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  .info h2 {
    font-size: 0.95rem;
    font-weight: 500;
    color: white;
    margin: 0 0 0.25rem 0;
  }

  .location {
    font-size: 0.8rem;
    color: rgba(255,255,255,0.8);
  }

  /* Modal Styles */
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .modal.open {
    opacity: 1;
    visibility: visible;
  }

  .modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
  }

  .modal-content {
    position: relative;
    background: white;
    border-radius: 12px;
    width: 700px;
    height: 600px;
    overflow-y: auto;
    transform: scale(0.95);
    transition: transform 0.3s ease;
  }

  .modal.open .modal-content {
    transform: scale(1);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0,0,0,0.5);
    border: none;
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .modal-close:hover {
    background: rgba(0,0,0,0.7);
  }

  .modal-body {
    display: flex;
    flex-direction: column;
  }

  .modal-gallery {
    background: transparent;
  }

  .modal-image-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .modal-image-container img {
    width: 300px;
    height: 300px;
    object-fit: contain;
  }

  .modal-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e5e5e5 0%, #d0d0d0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-placeholder span {
    font-size: 3rem;
    color: #bbb;
  }

  .gallery-thumbnails {
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem;
    overflow-x: auto;
  }

  .thumbnail {
    width: 60px;
    height: 60px;
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s ease;
    flex-shrink: 0;
  }

  .thumbnail:hover,
  .thumbnail.active {
    opacity: 1;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .modal-info {
    padding: 1.5rem;
  }

  .modal-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d2d2d;
    margin: 0 0 0.25rem 0;
  }

  .modal-location {
    font-size: 0.9rem;
    color: #888;
    display: block;
    margin-bottom: 1rem;
  }

  .modal-description {
    font-size: 1rem;
    color: #444;
    line-height: 1.6;
    margin: 0;
  }

  .modal-nav {
    display: flex;
    justify-content: space-between;
    padding: 1rem 4rem 1rem 1.5rem;
    border-bottom: 1px solid #eee;
  }

  .modal-nav button {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    font-size: 1.5rem;
    color: #666;
    transition: all 0.2s ease;
  }

  .modal-nav button:hover {
    color: #2d2d2d;
  }

  @media (max-width: 900px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 600px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .modal-content {
      width: 95%;
      max-height: 95vh;
    }

    .modal-info {
      padding: 1rem;
    }

    .modal-nav {
      padding: 0 1rem 1rem;
    }
  }

  @media (max-width: 400px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
