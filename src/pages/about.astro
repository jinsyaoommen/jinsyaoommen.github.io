---
import Layout from '../layouts/Layout.astro';
import { Container, Typography, Box, Divider } from '@mui/material';
---

<Layout title="About | Jinsy Oommen">
  <Container maxWidth="md" sx={{ py: 6 }}>
    <Typography variant="h3" component="h1" sx={{ fontWeight: 700, mb: 4 }}>
      About Me
    </Typography>

    <Box sx={{ mb: 4 }}>
      <Typography variant="body1" sx={{ fontSize: '1.1rem', lineHeight: 1.8, mb: 3 }}>
        Hi! I'm Jinsy Oommen, a software engineer passionate about building things that make a difference.
      </Typography>

      <Typography variant="body1" sx={{ fontSize: '1.1rem', lineHeight: 1.8, mb: 3 }}>
        I enjoy working across the full stack, from crafting intuitive user interfaces to designing
        robust backend systems. When I'm not coding, you'll find me exploring new technologies,
        reading, or working on side projects.
      </Typography>
    </Box>

    <Divider sx={{ my: 4 }} />

    <Typography variant="h5" component="h2" sx={{ fontWeight: 600, mb: 3 }}>
      What I Do
    </Typography>

    <Box sx={{ mb: 4 }}>
      <Typography variant="body1" sx={{ fontSize: '1.1rem', lineHeight: 1.8 }}>
        <ul style={{ paddingLeft: '1.5rem' }}>
          <li style={{ marginBottom: '0.5rem' }}>Full-stack web development</li>
          <li style={{ marginBottom: '0.5rem' }}>Building scalable applications</li>
          <li style={{ marginBottom: '0.5rem' }}>Continuous learning and experimentation</li>
        </ul>
      </Typography>
    </Box>

    <Divider sx={{ my: 4 }} />

    <Typography variant="h5" component="h2" sx={{ fontWeight: 600, mb: 3 }}>
      Get in Touch
    </Typography>

    <Typography variant="body1" sx={{ fontSize: '1.1rem', lineHeight: 1.8 }}>
      Feel free to reach out! You can find me on{' '}
      <a href="https://github.com/jinsyaoommen" target="_blank" rel="noopener noreferrer">
        GitHub
      </a>.
    </Typography>
  </Container>
</Layout>

<style>
  a {
    color: #1976d2;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
